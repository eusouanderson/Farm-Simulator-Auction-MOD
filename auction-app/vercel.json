{
    "version": 2,
    "builds": [
      {
        "src": "backend/conect.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/build" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/conect.js" },
      { "src": "/(.*)", "dest": "/frontend/build/$1" }
    ]
  }
  